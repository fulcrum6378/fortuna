<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="parentConstraint">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="arrow">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:src">@drawable/arrow</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginHorizontal">6dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <!-- #TextAppearance -->
    <style name="TextAppearance.Fortuna.Toolbar" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/morris_roman_black</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.Fortuna.Navigation" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quattrocento_bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Fortuna.Dialog.Message" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quattrocento_regular</item>
    </style>

    <style name="TextAppearance.Fortuna.Dialog.Button" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quattrocento_regular</item>
    </style>
</resources>
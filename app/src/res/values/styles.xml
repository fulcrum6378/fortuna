<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="parentConstraint">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="tbShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@drawable/shadow</item>
        <item name="layout_constraintTop_toBottomOf">@id/toolbar</item>
    </style>

    <style name="arrow">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:src">@drawable/arrow</item>
        <item name="android:background">@drawable/button_small</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="hArrow" parent="arrow">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="vArrow" parent="arrow">
        <item name="layout_constraintStart_toStartOf">@id/annus</item>
        <item name="layout_constraintEnd_toEndOf">@id/annus</item>
    </style>

    <style name="backupAction">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingVertical">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="dateComparisonSep">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="dateComparisonField" parent="dateComparisonSep">
        <item name="android:inputType">number</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:paddingVertical">9dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">19sp</item>
    </style>


    <!-- #TextAppearance (don't override Material TextAppearances) -->
    <style name="TextAppearance.Fortuna.Toolbar" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/morris_roman_black</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.Fortuna.Navigation" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
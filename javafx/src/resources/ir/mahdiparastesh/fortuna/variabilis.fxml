<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>

<DialogPane
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="ir.mahdiparastesh.fortuna.Variabilis">

    <headerText>Variabilis</headerText>

    <content>
        <GridPane hgap="10" vgap="10">
            <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Number:" />
            <Spinner GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="numberPicker" />

            <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Description:" />
            <TextArea GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="descriptionField" />

            <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Small Field:" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="smallTextField" />
        </GridPane>
    </content>

    <buttonTypes>
        <ButtonType buttonData="OK_DONE" text="OK" />
        <ButtonType buttonData="CANCEL_CLOSE" text="Cancel" />
    </buttonTypes>
</DialogPane>